# Copiar este archivo a .env y rellenar con credenciales reales. NO subir .env al repositorio.

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=usuario@example.com
SMTP_PASS=secreto_aqui

# Opcional: dirección From (si la plataforma la requiere)
FROM_ADDRESS=no-reply@example.com

# Correo del administrador/propietario que recibirá copia de cada cotización
ADMIN_EMAIL=admin@example.com

# Puerto (opcional)
PORT=3000

# Opcional: CORS y rate limiting
CORS_ORIGINS=
ENABLE_RATE_LIMIT=0
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
BODY_LIMIT=25mb
